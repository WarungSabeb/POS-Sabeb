    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="./userPOS.css">
    <title>POS</title>
</head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-dark shadow-lg p-3 mb-5" style="background-color: #393A3F; position: fixed; width: 100%; z-index: 2">
    
        <a href="index"><img src="https://i.ibb.co/rkr84HQ/Logo-removebg-preview-1.png" alt="Logo-removebg-preview-1" border="0" style="width: 100px; height:60px; padding-left: 20px;"  ></a>
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        
      <div class="collapse navbar-collapse" id="navbarSupportedContent" style=" padding-left: 50px;">
          <ul class="navbar-nav mr-auto">
          
            <!-- <li class="nav-item active">
              <a class="nav-link" href="POS">Daftar Makanan </a>
            </li> -->
              
          </ul>
      
          <!-- <a type="button" class="btn btn-secondary" style="border-radius:20px; background-color: #393A3F;" href="./Login"> Masuk</a>
          <a type="button" class="btn btn-secondary " style="margin-left: 5px;border-radius:20px; background-color: #008CFF;" href="./Sign-up">Daftar</a> -->
        </div>
      
      </nav>
      <br>
      <br>
      <br>
      <br>
    <div class="main">
        <div class="content" id='foodList'>

            <%itemsList.forEach(item => {%>
              <div class="card">
                <img src="<%= item.item_image %>">
                <p><%= item.item_name %> </p><div class="action">
                  <span >Rp <%= item.item_price %> | Stok : <%= item.item_stock %></span>
                  <button class="order" value="0" onclick="addtoCart(this.value)">
                    <i class="fas fa-cart-plus" aria-hidden="true">
                    </i> Pesan</button>
                  </div>
                </div>
          <%})%>

         
        </div>
        <div class="sidebar" id="cartList">

        </div>

    </div>
    <script src="./userPOS.js"></script>
</body>
